---
import { photoSessions } from '../../data/photoSessions';
---

<section id="sesiones-fotograficas" class="section bg-bg-secondary">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-up">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        Fotograf칤a
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        Desde urbana hasta comercial, conceptos y emociones al rededor del mundo.
      </p>
    </div>

    <!-- Grid de Sesiones -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
      {photoSessions.map((session, index) => (
        <a 
          href={session.link}
          class="photo-session-card group relative block overflow-hidden rounded-lg aspect-[3/4] fade-in-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Imagen -->
          <img 
            src={session.image}
            alt={session.title}
            class="w-full h-full object-cover transition-all duration-500 ease-out group-hover:scale-105 group-hover:brightness-110"
            loading="lazy"
          />
          
          <!-- Overlay con texto -->
          <div class="absolute inset-0 z-10">
            {/* URBANOLOG칈A - Dise침o vertical */}
            {session.id === '1' && (
              <>
                {/* T칤tulo vertical pegado al edificio (centro-izquierda) */}
                <div class="absolute left-[30%] top-1/2 -translate-y-1/2 -translate-x-1/2">
                  <h3 class="vertical-text text-xl md:text-2xl lg:text-3xl font-serif font-bold text-white uppercase
                             drop-shadow-[0_6px_20px_rgba(0,0,0,0.95)]
                             transition-all duration-500 ease-out
                             group-hover:scale-105 
                             group-hover:drop-shadow-[0_8px_24px_rgba(0,0,0,1)]"
                      style="writing-mode: vertical-lr; transform: rotate(180deg); letter-spacing: 0.05em;">
                    {session.title}
                  </h3>
                </div>
                
                {/* Subt칤tulo en la parte inferior derecha */}
                {session.subtitle && (
                  <div class="absolute bottom-3 md:bottom-4 right-3 md:right-4 left-[38%]">
                    <p class="text-[0.45rem] md:text-[0.55rem] text-white/95 font-light tracking-[0.08em] uppercase text-right italic leading-tight
                              drop-shadow-[0_3px_10px_rgba(0,0,0,0.9)]
                              transition-all duration-500
                              group-hover:text-white group-hover:scale-105">
                      {session.subtitle}
                    </p>
                  </div>
                )}
              </>
            )}
            
            {/* EVENTOS - Dise침o horizontal centrado */}
            {session.id === '2' && (
              <>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <h3 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-white uppercase text-center
                             drop-shadow-[0_6px_20px_rgba(0,0,0,0.95)]
                             transition-all duration-500 ease-out
                             group-hover:scale-105 
                             group-hover:drop-shadow-[0_8px_24px_rgba(0,0,0,1)]"
                      style="letter-spacing: 0.08em;">
                    {session.title}
                  </h3>
                </div>
                
                {/* Subt칤tulo en la parte inferior */}
                <div class="absolute bottom-4 left-0 right-0 text-center">
                  <p class="text-[0.6rem] md:text-[0.7rem] text-white/95 font-light tracking-[0.2em] uppercase
                            drop-shadow-[0_3px_10px_rgba(0,0,0,0.9)]
                            transition-all duration-500
                            group-hover:text-white">
                    MUSICA - SESIONES
                  </p>
                </div>
              </>
            )}
            
            {/* PRESETS - Dise침o horizontal centrado con color amarillo */}
            {session.id === '3' && (
              <>
                <div class="absolute inset-0 flex flex-col items-center justify-end pb-8 gap-3">
                  <h3 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold uppercase text-center presets-title
                             drop-shadow-[0_6px_20px_rgba(0,0,0,0.95)]
                             transition-all duration-500 ease-out
                             group-hover:scale-105 
                             group-hover:drop-shadow-[0_8px_24px_rgba(0,0,0,1)]"
                      style="letter-spacing: 0.12em; color: #FFD700;">
                    {session.title}
                  </h3>
                  <p class="text-xs md:text-sm text-white/90 font-light tracking-[0.3em] uppercase
                            drop-shadow-[0_3px_10px_rgba(0,0,0,0.9)]">
                    FRAME COLLECTION
                  </p>
                  {/* Logo de Adobe Lightroom */}
                  <img 
                    src="/assets/logos/adobe-lightroom-logo.png" 
                    alt="Adobe Lightroom" 
                    class="w-16 h-16 md:w-20 md:h-20 object-contain opacity-90 group-hover:opacity-100 transition-opacity duration-300"
                    loading="lazy"
                  />
                </div>
              </>
            )}
            
            {/* PRODUCTO - Dise침o horizontal centrado */}
            {session.id === '4' && (
              <>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <h3 class="text-2xl md:text-3xl lg:text-4xl font-serif font-bold text-white uppercase text-center
                             drop-shadow-[0_6px_20px_rgba(0,0,0,0.95)]
                             transition-all duration-500 ease-out
                             group-hover:scale-105 
                             group-hover:drop-shadow-[0_8px_24px_rgba(0,0,0,1)]"
                      style="letter-spacing: 0.08em;">
                    {session.title}
                  </h3>
                </div>
                
                {/* Subt칤tulo en la parte inferior */}
                <div class="absolute bottom-4 left-0 right-0 text-center">
                  <p class="text-[0.6rem] md:text-[0.7rem] text-white/95 font-light tracking-[0.2em] uppercase
                            drop-shadow-[0_3px_10px_rgba(0,0,0,0.9)]
                            transition-all duration-500
                            group-hover:text-white">
                    RESTAURANTES - SERVICIOS
                  </p>
                </div>
              </>
            )}
          </div>
        </a>
      ))}
    </div>

    <!-- CTA Button -->
    <div class="text-center mt-12 fade-in">
      <a 
        href="/portfolio" 
        class="btn-secondary inline-flex items-center gap-2 text-lg px-8 py-4"
      >
        Portofolio 游닞
      </a>
    </div>
  </div>
</section>

<style>
  .photo-session-card {
    position: relative;
  }
  
  /* Overlay sutil oscuro para mejorar la legibilidad del texto */
  .photo-session-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0.3) 100%);
    opacity: 1;
    transition: opacity 0.5s ease;
    pointer-events: none;
    z-index: 1;
  }
  
  .photo-session-card:hover::before {
    opacity: 0.9;
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.4) 100%);
  }

  .photo-session-card > div:last-of-type {
    z-index: 2;
  }

  /* Efecto de brillo sutil en el borde al hacer hover */
  .photo-session-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    box-shadow: inset 0 0 0 2px transparent;
    transition: box-shadow 0.5s ease;
    pointer-events: none;
    z-index: 3;
  }

  .photo-session-card:hover::after {
    box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.3);
  }

  /* Texto vertical con fuente serif */
  .vertical-text {
    font-family: 'Georgia', 'Times New Roman', serif;
    line-height: 1;
  }
</style>
