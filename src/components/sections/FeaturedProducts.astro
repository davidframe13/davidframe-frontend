---
import ProductCard from '../ui/ProductCard.astro';
import { featuredProducts } from '../../data/products';
---

<section id="productos-destacados" class="section bg-bg-secondary">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-up">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        Productos Destacados
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        Los packs de presets más populares y efectivos para transformar tus fotografías
      </p>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-8">
      {featuredProducts.map((product, index) => (
        <ProductCard product={product} index={index} />
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12 fade-in">
      <a 
        href="/productos" 
        class="btn-primary inline-flex items-center gap-2"
      >
        Ver Todos los Productos
        <svg 
          class="w-5 h-5" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M17 8l4 4m0 0l-4 4m4-4H3"
          />
        </svg>
      </a>
    </div>
  </div>
</section>
