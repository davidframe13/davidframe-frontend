<!-- Sección de Beneficios -->
<section class="section bg-bg-primary">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-up">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        ¿Por qué elegir mis presets?
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        Creados y probados por fotógrafo profesional, perfectos para principiantes y expertos
      </p>
    </div>

    <!-- Grid de Beneficios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {benefitFeatures.map((feature, index) => {
        const IconComponent = getIcon(feature.icon);
        return (
          <div 
            class="card group hover:scale-105 transition-transform duration-300 fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-lg bg-primary/10 border border-primary/20 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                  <IconComponent className="w-6 h-6 text-primary" />
                </div>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
                <p class="text-text-muted text-sm">{feature.description}</p>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
