---
import { Monitor, Smartphone, FileImage, Palette, Zap, Sparkles, DollarSign, GraduationCap } from 'lucide-react';
import { compatibilityFeatures, benefitFeatures, type Feature } from '../../data/features';

// Mapeo de iconos
const iconMap: Record<string, any> = {
  'monitor': Monitor,
  'smartphone': Smartphone,
  'file-image': FileImage,
  'palette': Palette,
  'zap': Zap,
  'sparkles': Sparkles,
  'dollar-sign': DollarSign,
  'graduation-cap': GraduationCap,
};

const getIcon = (iconName: string) => {
  return iconMap[iconName] || Monitor;
};
