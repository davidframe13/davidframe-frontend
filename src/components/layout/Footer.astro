---
import { Instagram, Youtube, Mail } from 'lucide-react';

const currentYear = new Date().getFullYear();

const footerLinks = {
  productos: [
    { name: 'Todos los Productos', href: '/productos' },
    { name: 'Packs de Presets', href: '/productos?categoria=pack' },
    { name: 'Presets Individuales', href: '/productos?categoria=single' },
    { name: 'LUTs', href: '/productos?categoria=luts' },
  ],
  recursos: [
    { name: 'Portfolio', href: '/portfolio' },
    { name: 'Tutoriales', href: '/tutoriales' },
    { name: 'Blog', href: '/blog' },
    { name: 'FAQ', href: '/#faq' },
  ],
  legal: [
    { name: 'Términos y Condiciones', href: '/terminos' },
    { name: 'Política de Privacidad', href: '/privacidad' },
    { name: 'Política de Reembolso', href: '/reembolso' },
  ],
};

const socialLinks = [
  { 
    name: 'Instagram', 
    href: 'https://www.instagram.com/davidframe.0?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==', 
    icon: Instagram 
  },
  { 
    name: 'YouTube', 
    href: 'https://www.youtube.com/@DavidFrame.0', 
    icon: Youtube 
  },
  { 
    name: 'Email', 
    href: 'mailto:hola@davidframe.co', 
    icon: Mail 
  },
];
---

<footer class="bg-bg-secondary border-t border-border">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-10 h-10 rounded-lg bg-gradient-primary flex items-center justify-center">
            <span class="text-white font-bold text-xl">DF</span>
          </div>
          <span class="text-xl font-bold">DavidFrame</span>
        </div>
        <p class="text-text-secondary mb-6 max-w-sm">
          Presets y LUTs cinematográficos profesionales para transformar tus fotografías. 
          Creados por David Frame, probados en miles de imágenes.
        </p>
        
        <!-- Social Links -->
        <div class="flex items-center space-x-4">
          {socialLinks.map(social => {
            const IconComponent = social.icon;
            return (
              <a 
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg bg-bg-tertiary border border-border flex items-center justify-center hover:border-primary hover:bg-primary/10 transition-all group"
                aria-label={social.name}
              >
                <IconComponent className="w-5 h-5 group-hover:text-primary transition-colors" />
              </a>
            );
          })}
        </div>
      </div>

      <!-- Productos -->
      <div>
        <h3 class="font-semibold mb-4 text-text-primary">Productos</h3>
        <ul class="space-y-2">
          {footerLinks.productos.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-text-secondary hover:text-primary transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Recursos -->
      <div>
        <h3 class="font-semibold mb-4 text-text-primary">Recursos</h3>
        <ul class="space-y-2">
          {footerLinks.recursos.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-text-secondary hover:text-primary transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-semibold mb-4 text-text-primary">Legal</h3>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-text-secondary hover:text-primary transition-colors text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Newsletter -->
    <div class="mt-12 pt-8 border-t border-border">
      <div class="max-w-2xl">
        <h3 class="font-semibold mb-2">Suscríbete al newsletter</h3>
        <p class="text-text-secondary text-sm mb-4">
          Recibe novedades, tutoriales y ofertas exclusivas directamente en tu correo.
        </p>
        <form class="flex gap-2">
          <input 
            type="email" 
            placeholder="tu@email.com"
            class="input flex-1"
            required
          />
          <button type="submit" class="btn-primary whitespace-nowrap">
            Suscribirme
          </button>
        </form>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-text-muted">
      <p>
        © {currentYear} DavidFrame. Todos los derechos reservados.
      </p>
      <p>
        Hecho con <span class="text-secondary">♥</span> en Colombia
      </p>
    </div>
  </div>
</footer>
