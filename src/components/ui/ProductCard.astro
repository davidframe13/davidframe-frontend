---
import type { Product } from '../../data/products';

interface Props {
  product: Product;
  index?: number;
}

const { product, index = 0 } = Astro.props;

// Formatear precio colombiano
const formattedPrice = new Intl.NumberFormat('es-CO', {
  style: 'currency',
  currency: 'COP',
  minimumFractionDigits: 0,
  maximumFractionDigits: 0
}).format(product.price);
---

<div 
  class="card group cursor-pointer overflow-hidden fade-in-up"
  style={`animation-delay: ${index * 0.1}s`}
>
  <!-- Image Container -->
  <div class="relative aspect-[4/3] overflow-hidden rounded-lg mb-4 bg-bg-secondary">
    <img 
      src={product.previewImage}
      alt={product.name}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    
    <!-- Hover Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-bg-primary/90 via-bg-primary/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <div class="absolute bottom-4 left-4 right-4">
        <p class="text-sm text-text-secondary line-clamp-2">
          {product.description}
        </p>
      </div>
    </div>

    <!-- Badge de categorÃ­a -->
    {product.category === 'pack' && (
      <div class="absolute top-4 right-4">
        <span class="badge badge-primary text-xs uppercase font-semibold">
          Pack
        </span>
      </div>
    )}
  </div>

  <!-- Product Info -->
  <div class="space-y-3">
    <div>
      <h3 class="text-xl font-bold mb-1 group-hover:text-primary transition-colors">
        {product.name}
      </h3>
      
      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-2">
        {product.tags.slice(0, 3).map(tag => (
          <span class="text-xs text-text-muted">
            {tag}
          </span>
        ))}
      </div>
    </div>

    <!-- Price & CTA -->
    <div class="flex items-center justify-between pt-2 border-t border-border">
      <div>
        <p class="text-2xl font-bold text-gradient">
          {formattedPrice}
        </p>
      </div>
      
      <a 
        href={`/productos/${product.slug}`}
        class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors text-sm font-semibold"
      >
        Ver Detalles
        <svg 
          class="w-4 h-4 transition-transform group-hover:translate-x-1" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
    </div>
  </div>
</div>
